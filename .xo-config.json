{
    "prettier": true,
    "semi": true,
    "space": 4,
    "envs": ["node", "es2021"],
    "ignore": ["src/locale/*"],
    "rules": {
        "no-await-in-loop": "off",
        "import/extensions": ["warn", "never"],
        "unicorn/prefer-string-replace-all": "off",
        "@typescript-eslint/ban-types": "off",
        "@typescript-eslint/consistent-type-definitions": ["warn", "interface"]
    }
}
